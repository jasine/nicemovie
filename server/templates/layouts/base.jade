  block layout
    block content


  if (env == 'development')
    // build:js(client) scripts/global.js
    // bower:js
    script(src='/bower_components/jquery/dist/jquery.js')
    script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
    script(src='/bower_components/bootstrap-datepicker/js/bootstrap-datepicker.js')
    script(src='/bower_components/jquery.formatDateTime/jquery.formatDateTime.js')
    // endbower
    // endbuild
  else
    script(src='/scripts/global.js')

  // build:js(client) scripts/main.js
  // [injector:js]
  // [endinjector]
  script(src='/scripts/main.js')
