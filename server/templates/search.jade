extends ./layouts/base-front
block append css
  style.
    //- body { background-image: url(data:image/png;base64,);}
    .search-area{
        margin-top:105px;
    }
    #custom-search-input{
        padding: 3px;
        border: solid 1px #E4E4E4;
        border-radius: 6px;
        background-color: #fff;
        margin-top:30px;
    }
    
    #custom-search-input input{
        border: 0;
        box-shadow: none;
    }
    
    #custom-search-input button{
        margin: 2px 0 0 0;
        background: none;
        box-shadow: none;
        border: 0;
        color: #666666;
        padding: 0 8px 0 10px;
        border-left: solid 1px #ccc;
    }
    
    #custom-search-input button:hover{
        border: 0;
        box-shadow: none;
        border-left: solid 1px #ccc;
    }
    
    #custom-search-input .glyphicon-search{
        font-size: 23px;
    }

block content
  .container
    .row.search-area
      .col-md-6.col-md-offset-3
        h1.text-center 搜电影
          form(action='search',method='get')
            #custom-search-input
              .input-group.col-md-12
                input.form-control.input-lg(name='keywords',type='text', placeholder='勇敢的心')
                span.input-group-btn
                  button.btn.btn-info.btn-lg(type='submit')
                    i.glyphicon.glyphicon-search