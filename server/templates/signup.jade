extend layouts/base

append css
  style.
    body {
      padding-top: 40px;
      padding-bottom: 40px;
      background-color: #7fafee;
      background-image:url("/images/fast7bg.jpg")       ;
    }
     .panel{
      background:rgba(255,255,255,0.7) none repeat scroll !important; /*实现FF背景透明，文字不透明*/
      background:#000; filter:Alpha(opacity=20);/*实现IE背景透明*/  

    }

    .form-signin {
      max-width: 330px;
      padding: 15px;
      margin: 0 auto;
    }

    .form-signin,
    .form-signin .checkbox {
      margin-bottom: 10px;
    }

    .form-signin .checkbox {
      font-weight: normal;
    }

    .form-signin .form-control {
      position: relative;
      font-size: 16px;
      height: auto;
      padding: 10px;
      -webkit-box-sizing: border-box;
      -moz-box-sizing: border-box;
      box-sizing: border-box;
    }

    .form-signin .form-control:focus {
      z-index: 2;
    }

    .form-signin input[type="text"] {
      margin-bottom: -1px;
      border-bottom-left-radius: 0;
      border-bottom-right-radius: 0;
    }

    .form-signin input[type="password"] {
      margin-bottom: 10px;
      border-top-left-radius: 0;
      border-top-right-radius: 0;
    }
block content
  .container
    .panel.col-md-4.col-md-offset-4
      .panel-heading
        h3.form-signin-heading.center 注册
      .panel-body
        form.form-signin.form-horizontal(method='post',action='/account/signup')
          .form-group
            label.sr-only(for="inputEmail") 邮箱
            input#inputEmail.form-control(name='user[mail]',type="email", placeholder="邮箱", autofocus, required)
          .form-group
            label.sr-only(for="inputEmail") 用户名
            input#inputEmail.form-control(name='user[name]',type="text", placeholder="用户名", autofocus, required)
          .form-group
            label.sr-only(for="inputPassword") 密码
            input#inputPassword.form-control(name='user[password]',type="password", placeholder="密码", required)
          // .form-group
          //   .col-md-11.col-md-offset-1
          //     label.checkbox
          //       input(name='remerber',type="checkbox", value="remember-me")
          //       | 记住我
          .form-group
            button.btn.btn-lg.btn-primary.btn-block(type="submit") 注册
    .row
      .col-md-4.col-md-offset-4
        .alert.alert-danger.alert-dismissible(role='alert',style='visibility:#{visibility};')
          button.close(type='button', data-dismiss='alert', aria-label='Close')
            span(aria-hidden='true') ×
          strong #{message}
